@model MovieForum2.Models.Comment

@{
    ViewData["Title"] = "Create Comment";
}

<h1>Create Comment</h1>
<h3>Post to: @ViewBag.DiscussionTitle</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div>
                <input type="hidden" asp-for="DiscussionId" />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="GetDiscussion" asp-route-id="@Model.DiscussionId">Back to Discussion</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
