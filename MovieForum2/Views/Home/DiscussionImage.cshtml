@model MovieForum2.Models.Discussion

@{
    ViewData["Title"] = "DiscussionImage";

    string imageUrl = Url.Content("/images/" + @Model.ImageFilename);
}


<div>
    <h4>Discussion</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DiscussionId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiscussionId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageFilename)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImageFilename)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comments)
        </dt>
        <dd class = "col-sm-10">
            <p>Number of comments: @(Model.Comments != null ? Model.Comments.Count : 0) </p>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageFile)
        </dt>
        <dd class="col-sm-10">
            <img src="@imageUrl" class="img-fluid" alt=(model.Content)/>
        </dd>
    </dl>
</div>
