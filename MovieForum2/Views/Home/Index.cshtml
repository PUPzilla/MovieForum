@model List<MovieForum2.Models.Discussion>

@{
    ViewData["Title"] = "Home Page";
}

<h1>All Discussions</h1>

<div class="mb-4">
    Discuss your favourite movies of your favourite genres.<br/>
</div>
<a asp-controller="Discussions" asp-action="Create">Create a new discussion</a>

<div class="masonry-grid">
    @foreach (var item in Model)
    {
        string imageUrl = Url.Content("/images/" + item.ImageFilename);

        <div class="masonry-grid-item">
            <a href="@Url.Action("DiscussionImage", "Home", new { id = item.DiscussionId})">
                <h2 >@item.Title</h2>
                <img src="@imageUrl" class="img-fluid"/>
            </a>
        </div>
    }
</div>
